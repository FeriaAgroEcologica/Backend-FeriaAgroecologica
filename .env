# ===============================
# CONFIGURACIÓN GENERAL DEL SERVIDOR
# ===============================
PORT=3000
NODE_ENV=production

# ===============================
# BASE DE DATOS POSTGRESQL
# ===============================
# Formato: postgresql://usuario:contraseña@host:puerto/base_de_datos?schema=public
DATABASE_URL="postgresql://backend_user:1234@localhost:5432/feriaagro?schema=public"

# ===============================
# JWT - AUTENTICACIÓN
# ===============================
# Clave secreta para firmar los tokens JWT
JWT_SECRET="clave_super_segura_para_firmar_tokens_feria"
# Tiempo de expiración del token (ejemplo: 7 días)
JWT_EXPIRES_IN="7d"

# ===============================
# VARIABLES OPCIONALES
# ===============================
# URL pública o de frontend (por ejemplo, tu app React)
FRONTEND_URL="http://localhost:5173"

# Si luego lo expones con Ngrok o dominio propio, cámbialo por:
# FRONTEND_URL="https://tu-dominio-o-ngrok-url.ngrok-free.app"

# ===============================
# LOGS Y DEPURACIÓN
# ===============================
LOG_LEVEL=info
